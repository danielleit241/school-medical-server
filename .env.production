# Production Environment Configuration
ENVIRONMENT=Production

# Database Configuration (CHANGE THESE IN PRODUCTION!)
DB_PASSWORD=YourVerySecureProductionPassword123!
MSSQL_PID=Standard

# PostgreSQL Alternative (uncomment to use PostgreSQL)
# POSTGRES_DB=SchoolMedicalManagement
# POSTGRES_USER=schoolmedical
# POSTGRES_PASSWORD=YourVerySecurePostgreSQLPassword123!

# JWT Configuration (GENERATE NEW KEYS FOR PRODUCTION!)
JWT_KEY=YOUR_PRODUCTION_JWT_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG_AND_VERY_SECURE
JWT_ISSUER=https://your-domain.com
JWT_AUDIENCE=https://your-domain.com

# Default Admin Account (CHANGE THESE IN PRODUCTION!)
ADMIN_PHONE=admin_phone_number
