# Default Account Creation
DEFAULT_PASSWORD=SecureDefaultPassword123!
DEFAULT_ROLE=parent

# Email Configuration (CONFIGURE FOR YOUR PRODUCTION EMAIL SERVICE!)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USERNAME=noreply@your-domain.com
EMAIL_PASSWORD=your_production_email_password

# Application Settings
ASPNETCORE_ENVIRONMENT=Production